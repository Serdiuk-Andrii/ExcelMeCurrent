<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@drawable/white_dialog_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/habit_expanded_name"
        android:textStyle="bold"
        android:textColor="@color/dateTextColour"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/habit_expanded_description"
        android:textStyle="bold"
        android:textColor="@color/dateTextColour"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/habit_expanded_time"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:textSize="20sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/habit_expanded_delete"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:text="Delete"
        app:backgroundTint="#E83636" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/habit_expanded_accept"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:text="OK"
        app:backgroundTint="@color/green" />







</LinearLayout>