<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExcelMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firstMenuIconColor</item>
        <item name="colorPrimaryVariant">@color/thirdMenuIconColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/firstMenuIconColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/firstMenuIconColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/firstMenuIconColor</item>
        <item name="colorOnPrimary">@color/thirdMenuIconColor</item>
    </style>

    <style name="Theme.ExcelMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--Styles for card views in the main menu that allow separate rounded corners-!-->

    <style name="cardLeftSideCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardLeftSideCorners</item>
    </style>

    <style name="ShapeAppearance_cardLeftSideCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>

    <style name="cardRightSideCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardRightSideCorners</item>
    </style>

    <style name="ShapeAppearance_cardRightSideCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
    </style>

    <style name="cardBottomCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardLeftSideCorners</item>
    </style>

    <style name="ShapeAppearance_cardBottomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>

    <style name="cardUpperCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardUpperCorners</item>
    </style>

    <style name="ShapeAppearance_cardUpperCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
    </style>


    <style name="menuCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="android:layout_height">112dp</item>
        <item name="android:layout_width">112dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="menu" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="menuLeft" parent="@style/menu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardRightSideCorners</item>
    </style>

    <style name="menuRight" parent="@style/menu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardLeftSideCorners</item>
    </style>

    <style name="menuText">
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="settingOption" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="cardBackgroundColor">@color/firstMenuIconColor</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="inputRegistration" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="cardBackgroundColor">@color/firstMenuIconColor</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!--The end of styles for cards!-->

    <style name="Theme.ExcelMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExcelMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Slider styles-->

    <style name="Myslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/tool_tip_background</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.ExcelMe.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ExcelMe.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExcelMe.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
    </style>

    <!--Slider styles end-->

    <style name="button_left_radius_corners" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="button_right_radius_corners" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

    <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
    <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="fadeOutAnimation">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>