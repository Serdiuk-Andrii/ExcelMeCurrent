<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExcelMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ExcelMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--Styles for card views in the main menu that allow separate rounded corners-!-->

    <style name="cardLeftSideCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardLeftSideCorners</item>
    </style>

    <style name="ShapeAppearance_cardLeftSideCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
    </style>

    <style name="cardRightSideCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardRightSideCorners</item>
    </style>

    <style name="ShapeAppearance_cardRightSideCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
    </style>

    <style name="menuCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="android:layout_height">112dp</item>
        <item name="android:layout_width">112dp</item>
    </style>

    <style name="menu" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="menuLeft" parent="@style/menu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardRightSideCorners</item>
    </style>

    <style name="menuRight" parent="@style/menu">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_cardLeftSideCorners</item>
    </style>

    <style name="menuText">
        <item  name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!--The end of styles for cards!-->

    <style name="Theme.ExcelMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExcelMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>