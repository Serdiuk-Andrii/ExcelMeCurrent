<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ExcelMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firstMenuIconColor</item>
        <item name="colorPrimaryVariant">@color/thirdMenuIconColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/color</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/firstMenuIconColor</item>
        <item name="colorOnPrimary">@color/thirdMenuIconColor</item>
    </style>

</resources>